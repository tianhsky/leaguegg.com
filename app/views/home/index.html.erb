<div class="search-game">
  <h3>Find out how aggresive your opponents are,<br>and how helpful your team is.</h3>
  <br><br>
  <form action="/search" role="search" method="get">
    <div class="search-game-container">
      <input type="hidden" name="type" value="game">
      <input type="text" autocapitalize="off" autocorrect="off" autofocus="" spellcheck="false" class="form-control input-lg input-search" name="summoner" placeholder="Search for summoner in game...">
      <select class="form-control input-lg input-region" name="region">
        <option value="na">NA</option>
        <option value="euw">EUW</option>
        <option value="eune">EUNE</option>
        <option value="br">BR</option>
        <option value="tr">TR</option>
        <option value="ru">RU</option>
        <option value="lan">LAN</option>
        <option value="las">LAS</option>
        <option value="oce">OCE</option>
        <option value="kr">KR</option>
      </select>
      <button class="btn btn-default btn-lg btn-search" type="submit">
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </div>
  </form>

</div>
