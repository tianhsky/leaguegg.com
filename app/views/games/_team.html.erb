<div class="team table-reponsive">
  <table class="table table-stripe table-compact">
    <thead>
      <tr class="team-banner <%= name %>-team">
        <th colspan="100">
          <div class="team-name">
            <%= name.upcase %> TEAM
          </div>
          <% unless team.banned_champions.blank? %>
            <div class="team-bans">
              <% team.banned_champions.each do |champ| %>
                <img src="<%=Consts::Champion.find_by_id(champ['champion_id'])['img']%>">
              <% end %>
            </div>
          <% end %>
        </th>
      </tr>
      <tr class="team-header">
        <th>
          Champion
        </th>
        <th>
          Summoner
        </th>
        <th>
          Recent KDA
        </th>
        <th>
          Season KDA
        </th>
        <th>
          Recent W/L
        </th>
        <th>
          Season W/L
        </th>
        <th>
          Aggresive Rating
        </th>
        <th>
          10min(Total) CS
        </th>
        <th>
          10min(Avg)<br>DmgTaken
        </th>
        <th>
          Jungle CS
        </th>
        <th>
          Counter JCS
        </th>
        <th>
          Wards Placed
        </th>
      </tr>
    </thead>
    <tbody>
      <% team.participants.each do |player| %>
        <% stats_recent = player.ranked_stat_by_recent_champion %>
        <% stats_season = player.ranked_stat_by_champion %>
        <tr class="team-player">
          <td class="champion-spells">
            <div class="champion">
              <img src="<%= Consts::Champion.find_by_id(player.champion_id)['img'] %>">
            </div>
            <div class="spells">
              <img src="<%= Consts::Spell.find_by_id(player.spell1_id)['img'] %>"><br>
              <img src="<%= Consts::Spell.find_by_id(player.spell2_id)['img'] %>">
            </div>
          </td>
          <td class="summoner">
            <%= player.summoner_name %>
          </td>
          <td class="kda">
            <% if stats_recent %>
              <%= decimal(stats_recent.kda_rate, 2) %><br>
              <%= decimal(stats_recent.avg_kills, 1) %>/<%= decimal(stats_recent.avg_deaths, 1) %>/<%= decimal(stats_recent.avg_assists, 1) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="kda">
            <% if stats_season %>
              <%= decimal(stats_season.kda_rate, 2) %><br>
              <%= decimal(stats_season.avg_kills, 1) %>/<%= decimal(stats_season.avg_deaths, 1) %>/<%= decimal(stats_season.avg_assists, 1) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="wl">
            <% if stats_recent %>
              <%= percentage(stats_recent.win_rate, 2) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="wl">
            <% if stats_season %>
              <%= percentage(stats_season.win_rate, 2) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="aggresive">
            <% if stats_recent %>
              <%= percentage(stats_recent.aggresive_rate, 2) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="cs">
            <% if stats_recent %>
              <%= decimal(stats_recent.avg_cs_at_10m, 1) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="dmg">
            <% if stats_recent %>
              <%= decimal(stats_recent.avg_per_min_dmg_taken_at_10m, 1) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="cs">
            <% if stats_recent %>
              <%= decimal(stats_recent.avg_team_jungle_kills, 1) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="cs">
            <% if stats_recent %>
              <%= decimal(stats_recent.avg_enemy_jungle_kills, 1) %>
            <% else %>
              -
            <% end %>
          </td>
          <td class="cs">
            <% if stats_recent %>
              <%= decimal(stats_recent.avg_wards_placed, 1) %>
            <% else %>
              -
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>