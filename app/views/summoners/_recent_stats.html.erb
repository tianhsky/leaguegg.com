<div class="panel panel-info recent-stats">
  <div class="panel-heading">
    <div class="title">
      Recent Match Average
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="kda">
        <div class="graph">
          <canvas id="kda-chart" width="100" height="100"></canvas>
        </div>
        <div class="stats">
          <div>
            <%= @recent_stats['kills'] %>(K) / 
            <%= @recent_stats['deaths'] %>(D) / 
            <%= @recent_stats['assists'] %>(A)
          </div>
          <div>
            Average <%= @recent_stats['kda_rate'] %> KDA
          </div>
        </div>
      </div>
      <hr>
      <div class="wl">
        <div class="graph">
          <canvas id="wl-chart" width="100" height="100"></canvas>
        </div>
        <div class="stats">
          <div>
            <%= @recent_stats['won'] %>(W) / 
            <%= @recent_stats['lost'] %>(L)
          </div>
          <div>
            Won <%= @recent_stats['win_rate']*100 %> %
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

