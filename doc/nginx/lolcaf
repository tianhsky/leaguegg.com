upstream lolcaf {
  server unix:/home/deployer/srv/production/shared/lolcaf/tmp/sockets/puma.sock;
}

server {
  listen 80;
  server_name *.lolcaf.com;

  root /home/deployer/srv/production/lolcaf/current/public;
  index index.html index.htm;

  client_max_body_size 10m;

  access_log /var/log/nginx/lolcaf_access.log;
  error_log /var/log/nginx/lolcaf_error.log;

  error_page 404 /404.html;
  error_page 422 /422.html;
  error_page 500 /500.html;
  error_page 502 503 504 /50_.html;

  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_next_upstream error timeout invalid_header http_500 http_503 http_504;

    # Proxy request if local file does not exist
    if (!-f $request_filename) {
      proxy_pass http://lolcaf;
      break;
    }
  }

  location /live_status{
    stub_status on;
    access_log off;
    allow all;
  }

}
