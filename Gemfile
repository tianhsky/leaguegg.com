# Error tracking
gem 'airbrake', '~> 4.1.0'
# Annotate model
gem 'annotate', '~> 2.6.8'
# Http
gem 'httparty', '~> 0.13.3'
# Cache
gem 'redis-rails', '~> 4.0.0'
# Print object nicely
gem 'awesome_print', '~> 1.6.1', require: 'ap'
# Schedule task
gem 'whenever', '~> 0.9.4', require: false
# Limit api request rate
gem 'ratelimit', '~> 1.0.2'
