source 'https://rubygems.org'

# Env
gem 'dotenv-rails', '~> 2.0.0'
# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.4'
# JavaScript runtime
gem 'execjs', '~> 2.5.2'
gem 'therubyracer', '~> 0.12.2'

# Frontend js framework
